---
import SmallPlaceholder from "../components/SmallPlaceholder.astro";
import Placeholder from "../components/Placeholder.astro";
---

<container
	class="w-full p-5 max-w-screen-2xl flex flex-col justify-center items-center gap-4"
>
	<div class="w-full max-w-screen-lg text-bblack">
		<Placeholder color="bg-blightblue" textColor="text-bblack" text="Skills" />
	</div>
	<div
		class="grid md:grid-cols-2 justify-evenly justify-items-center place-items-center gap-4 w-full max-w-screen-lg"
	>
		<div
			class="bg-bwhite flex flex-col gap-1 w-full max-w-80 h-64 p-6 border-4 border-bblack rounded-xl shadow-[-5px_7px_rgba(0,0,0,1)]"
		>
			<div class="mb-3">
				<SmallPlaceholder color="bg-bwhite" text="Video Editing" />
			</div>

			Adobe Premiere Pro
			<progress class="progress w-full max-w-72" value="75" max="100"
			></progress>
			Adobe After Effects
			<progress class="progress w-full max-w-72" value="40" max="100"
			></progress>
		</div>
		<div
			class="bg-bwhite flex flex-col gap-1 w-full max-w-80 h-64 p-6 border-4 border-bblack rounded-xl shadow-[-5px_7px_rgba(0,0,0,1)]"
		>
			<div class="mb-3">
				<SmallPlaceholder color="bg-bwhite" text="Graphics Design" />
			</div>
			Adobe Illustrator
			<progress class="progress w-full max-w-72" value="60" max="100"
			></progress>

			Adobe Photoshop
			<progress class="progress w-full max-w-72" value="30" max="100"
			></progress>
		</div>
		<div
			class="bg-bwhite flex flex-col gap-1 w-full max-w-80 h-64 p-6 border-4 border-bblack rounded-xl shadow-[-5px_7px_rgba(0,0,0,1)]"
		>
			<div class="mb-3">
				<SmallPlaceholder color="bg-bwhite" text="Front-End Dev" />
			</div>

			Astro.js
			<progress class="progress w-full max-w-72" value="50" max="100"
			></progress>
			React
			<progress class="progress w-full max-w-72" value="30" max="100"
			></progress>
			Swift
			<progress class="progress w-full max-w-72" value="10" max="100"
			></progress>
		</div>
		<div
			class="bg-bwhite flex flex-col gap-1 w-full max-w-80 h-64 p-6 border-4 border-bblack rounded-xl shadow-[-5px_7px_rgba(0,0,0,1)]"
		>
			<div class="mb-3">
				<SmallPlaceholder color="bg-bwhite" text="Audio Mixing" />
			</div>

			Ableton Live
			<progress class="progress w-full max-w-72" value="30" max="100"
			></progress>
			FL Studio
			<progress class="progress w-full max-w-72" value="10" max="100"
			></progress>
		</div>
	</div>
</container>
