---
const { frontmatter } = Astro.props;
import SmallPlaceholder from "../components/SmallPlaceholder.astro";
import Placeholder from "../components/Placeholder.astro";
import "@fontsource-variable/lexend-mega";
import Nav from "../layouts/Nav.astro";
---

<html>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/star2.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title} - Iamusicgabriel</title>
	</head>
	<body class="flex flex-col items-center">
		<Nav />
		<container class="flex flex-col gap-10 p-8 max-w-screen-xl">
			<div class="flex flex-col gap-4 items-center">
				<Placeholder
					color="bg-bblue"
					text={frontmatter.title}
					textColor="text-bwhite"
				/>
				<div class="flex flex-col md:flex-row gap-2 justify-center">
					<SmallPlaceholder
						color="bg-blightblue"
						text={frontmatter.subtitle}
						textColor=""
					/>
					<SmallPlaceholder
						color="bg-borange"
						text={frontmatter.date}
						textColor="text-bwhite"
					/>
				</div>
			</div>
			<slot />
		</container>
	</body>
</html>
