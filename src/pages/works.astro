---
import ExtendedWorks from "../layouts/ExtendedWorks.astro";
import Nav from "../layouts/Nav.astro";
import Loading from "../layouts/Loading.astro";
import "@fontsource-variable/lexend-mega";
---

<html lang="en" data-theme="light">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/star2.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Works - Iamusicgabriel</title>
	</head>
	<script>
		window.onload = () => {
			setTimeout(() => {
				document.querySelector("#loading").classList.add("hidden");
				document.querySelector("#dom").classList.remove("hidden");
				document.querySelector("#dom").classList.add("flex");
			}, 300);
		};
	</script>
	<body class="bg-byellow">
		<div id="loading">
			<Loading class="loading" />
		</div>
		<div id="dom" class="hidden flex-col items-center">
			<Nav />
			<ExtendedWorks />
		</div>
	</body>
</html>
