---
const { text, href, pic, date } = Astro.props;
---

<a
	style={{
		backgroundImage: `url(${pic})`,
	}}
	href={href}
	class={`flex flex-col aspect-[16/9] sm:aspect-[3/4] max-w-md items-center border-4 border-bblack rounded-xl shadow-[-5px_7px_rgba(0,0,0,1)] transition-all hover:shadow-[-10px_13px_rgba(0,0,0,1)] hover:scale-105 bg-center bg-cover w-full`}
>
	<div
		class="flex-col items-end w-full h-full p-5 lg:p-2 rounded-lg bg-gradient-to-t from-bblack via-35% via-transparent"
	>
		<span
			class="text-md text-center flex flex-col justify-between items-end text-bwhite h-full w-full"
			><span
				class="self-start text-left text-xs drop-shadow-[-1px_1px_1px_rgba(0,0,0,1)]"
				>{date}</span
			><span
				class="self-right text-right text-sm md:text-md md:self-center md:text-center drop-shadow-[-1px_1px_1px_rgba(0,0,0,1)]"
				>{text}</span
			></span
		>
	</div>
</a>
